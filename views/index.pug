extends layout

block timeline
    

block body
    article#main
        //	Simple description about this site
        header(class=['special','container'])
            span(class=['icon','fa-bar-chart-o'])
            h2= subtitle
            p= subdescription
        //	Don't know what to put here
            section(class=['wrapper','style2','container','special-alt'])
            div(class=['row','50%'])
                header
        section(class=['wrapper','style2','container','special'])
            div.row
                div(class=['12u'])
                    section
                        // If why, use why; otherwise, use default.
                        h2= why ? why :'But Why? Why do these?'	
                each reason in reasons
                    // reasons, a json list. 
                    div(class=['4u','12u(narrower)'])
                        section
                            span(class=['icon','featured','fa-check'])
                            header
                                h3= reason.reason
                                p= reason.detail
        // Starred project
        section(class=['wrapper','style3','container','special'])
            header.major
                h2 Checkout some of my projects!
                div.row
                    each star in projects
                        // projects, starred
                        div(class=['6u','12u(narrower)'])
                            section
                                a(class=['image','featured'] href=star.url)
                                    img(src=star.picurl||"/images/pic01.jpg" alt=star.picalt?star.picalt:'A simple picture')
                                header
                                    h3= star.title
                                p= star.summary
    section#cta
        header
            h2 View more on my Timeline!
        footer
            ul.buttons
                li
                    a(href='/timeline' class='button') Timeline